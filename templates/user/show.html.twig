{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th scope="col">Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th scope="col">Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th scope="col">UsernameCanonical</th>
            <td>{{ user.usernameCanonical }}</td>
        </tr>
        <tr>
            <th scope="col">Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th scope="col">EmailCanonical</th>
            <td>{{ user.emailCanonical }}</td>
        </tr>
        <tr>
            <th scope="col">Enabled</th>
            <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th scope="col">Salt</th>
            <td>{{ user.salt }}</td>
        </tr>
        <tr>
            <th scope="col">Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th scope="col">LastLogin</th>
            <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th scope="col">ConfirmationToken</th>
            <td>{{ user.confirmationToken }}</td>
        </tr>
        <tr>
            <th scope="col">Roles</th>
            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
        </tr>

        </tbody>
    </table>

    <br>
    <h3>Bookings</h3>
    <table class="table">
        <tbody>
        {% for book in book %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.start ? book.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ book.end ? book.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">Show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>

    <a class="float-left btn btn-outline-secondary" href="{{ path('user_index') }}">back to list</a>
    <a class="float-left btn btn-outline-dark" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>



    {{ include('user/_delete_form.html.twig') }}


{% endblock %}